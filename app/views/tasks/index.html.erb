<div ng-app="app">
  <div ng-controller="tasksCtrl">
    <section class="todoapp">
      <header class="header">
        <h1>todos</h1>
        <form ng-submit="createNewTask(newTaskText)">
          <input ng-model="newTaskText" class="new-todo" placeholder="What needs to be done?" autofocus>
        </form>
      </header>
      <section class="main">
        <input class="toggle-all" type="checkbox">
        <label for="toggle-all">Mark all as complete</label>
        <ul class="todo-list">
          <li ng-repeat="task in tasks" ng-class="{completed: task.completed}">
            <div class="view">
              <input ng-click="toggleCompleted(task)" class="toggle" type="checkbox">
              <label>{{ task.text }}</label>
              <button class="destroy"></button>
            </div>
          </li>
        </ul>
      </section>
      <footer class="footer">
        <span class="todo-count"></span>
        <ul class="filters">
          <li>
            <a href="#/" class="selected">All</a>
          </li>
          <li>
            <a href="#/active">Active</a>
          </li>
          <li>
            <a href="#/completed">Completed</a>
          </li>
        </ul>
        <button ng-click="destroyCompleted()" class="clear-completed">Clear completed</button>
      </footer>
    </section>

  </div>
</div>